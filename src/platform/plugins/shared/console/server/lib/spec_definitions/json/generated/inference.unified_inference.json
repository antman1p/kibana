{
  "inference.unified_inference": {
    "url_params": {
      "error_trace": "__flag__",
      "filter_path": [],
      "human": "__flag__",
      "pretty": "__flag__",
      "timeout": [
        "30s",
        "-1",
        "0"
      ]
    },
    "url_components": {
      "task_type": [
        "sparse_embedding",
        "text_embedding",
        "rerank",
        "completion"
      ]
    },
    "methods": [
      "POST"
    ],
    "patterns": [
      "_inference/{inference_id}/_unified",
      "_inference/{task_type}/{inference_id}/_unified"
    ],
    "documentation": "https://www.elastic.co/guide/en/elasticsearch/reference/master/unified-inference-api.html",
    "availability": {
      "stack": true,
      "serverless": true
    }
  }
}
